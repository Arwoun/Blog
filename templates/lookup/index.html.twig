{% extends 'base.html.twig' %}

{% block title %}Hello LookupController!{% endblock %}

{% block body %}
    <div>
    </div>
    <h1>Résultats de la recherche</h1>
    <h2 class="my-4">Nous avons trouvé les articles suivants pour vous :</h2>
    <table>
    {% for article in articles %}
        <div>
            <h3>
                {{ article.title }}
            </h3>
            <div>
                <a href="{{ path('app_article_show', {'id': article.id}) }}">Consulter le contenue de l'article</a>
            </div>
        </div>
    {% else %}
<div>
    <p>Aucun article trouvé</p>
</div>
    {% endfor %}
        </table>
{% endblock %}
